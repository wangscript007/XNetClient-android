<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"   
     android:layout_width="match_parent"    
     android:layout_height="match_parent" 
     android:background="#909090"   
     android:scrollbars="vertical" > 
	<HorizontalScrollView    
    android:layout_width="match_parent"    
    android:layout_height="match_parent"> 
    
	<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:background="#909090">
    
      <LinearLayout
        android:id="@+id/ly_ptt_addr"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">
	        
          <!-- android:text="192.168.111.250" -->
          <!-- android:text="115.182.73.124" -->
          <EditText
	         android:id="@+id/editText_ipaddr"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_weight="1"
	         android:text="123.207.174.133"
	         android:textColor="#FFFFFF"
	         android:textSize="15sp"/>
          
	     <EditText
	         android:id="@+id/editText_userName"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_weight="1"
	         android:text="6008"
	         android:textColor="#FFFFFF"
	         android:textSize="15sp"/>
	     <EditText
	         android:id="@+id/editText_gameid"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_weight="1"
	         android:hint="gameid"
	         android:text="球球大作战"
	         android:textColor="#FFFFFF"
	         android:textSize="15sp"/>
      </LinearLayout>
      
      <LinearLayout
        android:id="@+id/ly_ptt_addr2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ly_ptt_addr"
        android:layout_marginTop="2dp">
	     
          <EditText
	         android:id="@+id/editText_game_server_id"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_weight="1"
	         android:hint="server id"
	         android:text="server1"
	         android:textColor="#FFFFFF"
	         android:textSize="15sp"/>
          
	     <EditText
	         android:id="@+id/editText_room_id"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_weight="1"
	         android:hint="room id"
	         android:text="ROOM0"
	         android:textColor="#FFFFFF"
	         android:textSize="15sp"/>
	     <EditText
	         android:id="@+id/editText_group_id"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_weight="1"
	         android:hint="group id"
	         android:text="group1"
	         android:textColor="#FFFFFF"
	         android:textSize="15sp"/>
	     <EditText
	         android:id="@+id/editText_expend"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_weight="1"
	         android:hint="expend"
	         android:text="expend"
	         android:textColor="#FFFFFF"
	         android:textSize="15sp"/>
	     
      </LinearLayout>
     
     <LinearLayout
        android:id="@+id/ly_ptt_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ly_ptt_addr2"
        android:layout_marginTop="5dp">
         
         <CheckBox
	         android:id="@+id/checkBox_link_mic"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:textColor="#FFFFFF"
	         android:layout_weight="1"
	         android:text="我是主播" />
         
	        <Button 
	        android:id="@+id/btn_login"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="登录"
	        android:textColor="#FFFFFF"
	        android:layout_weight="1"
	        android:textSize="18sp"/>
	        
        </LinearLayout>

     <ImageView
        android:id="@+id/IV_speater_1"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/ly_ptt_login"
        android:background="#55FF55"
        android:layout_marginTop="5dp"/>

      
      <LinearLayout
        android:id="@+id/ly_talk_btns2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/IV_speater_1"
        android:layout_marginTop="2dp">
          
	     <Button 
	        android:id="@+id/btn_talk_speakphone_on"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="打开免提"
	        android:textColor="#FFFFFF"
	        android:layout_weight="1"
	        android:textSize="18sp"/>
	     <Button 
	        android:id="@+id/btn_talk_switch_camera"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="切换摄像头"
	        android:textColor="#FFFFFF"
	        android:layout_weight="1"
	        android:textSize="18sp"/>
      </LinearLayout>

      <LinearLayout
        android:id="@+id/ly_talk_video"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ly_talk_btns2"
        android:layout_marginTop="2dp">
          
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="2dp"
        android:orientation="vertical">
		     <SurfaceView
	          android:id="@+id/sv_peer1"
	          android:layout_width="72dp"
	          android:layout_height="88dp"
	          />
		     
		     <TextView
	          android:id="@+id/tv_peer1"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:text="user1"
	          />
	     </LinearLayout>
	     
	     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="2dp"
        android:orientation="vertical">
		     <SurfaceView
	          android:id="@+id/sv_peer2"
	          android:layout_width="72dp"
	          android:layout_height="88dp"
	          />
		     
		     <TextView
	          android:id="@+id/tv_peer2"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:text="user1"
	          />
	     </LinearLayout>
	     
	     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="2dp"
        android:orientation="vertical">
		     <SurfaceView
	          android:id="@+id/sv_peer3"
	          android:layout_width="72dp"
	          android:layout_height="88dp"
	          />
		     
		     <TextView
	          android:id="@+id/tv_peer3"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:text="user1"
	          />
	     </LinearLayout>
	     
	     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="2dp"
        android:orientation="vertical">
		     <SurfaceView
	          android:id="@+id/sv_peer4"
	          android:layout_width="72dp"
	          android:layout_height="88dp"
	          />
		     
		     <TextView
	          android:id="@+id/tv_peer4"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:text="user1"
	          />
	     </LinearLayout>
	     
      </LinearLayout>
      
      <SurfaceView
	          android:id="@+id/sv_local"
	          android:layout_width="72dp"
	          android:layout_height="88dp"
	          android:layout_below="@+id/ly_talk_video"
	          />
      
	</RelativeLayout>
	</HorizontalScrollView>
</ScrollView> 
